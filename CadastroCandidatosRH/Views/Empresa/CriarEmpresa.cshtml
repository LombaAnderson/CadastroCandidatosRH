@model Empresa

@{
    ViewData["Title"] = "Criar Empresa";
}

<div class="text-center">

    <h1 class="display-4">Cadastrar Empresa </h1>

</div>

<form asp-controller="Empresa" asp-action="CriarEmpresa" method="post">
    <div class="form-group">
        <label for="cargo">Cargo da Vaga</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o cargo da vaga">
        <small id="cargoHelp" class="form-text text-muted"></small>
    </div>
    <div class="form-group">
        <label for="nome">Nome da Empresa</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome da empresa">
        <small id="nomeHelp" class="form-text text-muted"></small>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite email">
        <small id="nomeHelp" class="form-text text-muted"></small>
    </div>
    <div class="form-group">
        <label for="exampleInputCompetencias">Tecnologias Requeridas</label>
        <input type="text" asp-for="Tecnologias" class="form-control" placeholder="Preencha as tecnologias requeridas">
        <small id="tecnologiasHelp" class="form-text text-muted"></small>
    </div>
    <div class="form-group">
        <label for="exampleInputVagas">Vagas Disponíveis</label>
        <input type="text" asp-for="VagasDisponiveis" class="form-control" placeholder="Digite as vagas disponíveis">
        <small id="vagasHelp" class="form-text text-muted"></small>
    </div>
    <br>

    <button type="submit" class="btn btn-primary">Adicionar</button>

    <a class="btn btn-secondary" asp-controller="Empresa" asp-action="Index" role="button">Voltar</a>


</form>

